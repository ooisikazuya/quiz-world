<div class="container">
  <h1 class="bg-warning text-white text-center">クイズに解答する</h1>
</div><br>
<%= form_tag(search_quizzes_path, method: :get) do %>
  <div class="container">
    <div class="row">
      <div class="col-6"> 
        <h2 class="text-info">ジャンル検索</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= text_field_tag :search, "#{params[:search]}", class: "form-control border-info" %>
      </div>
      <div class="col-6">
        <%= submit_tag "検索", genre: nil, class: "btn btn-warning" %> 
      </div>
    </div>
  </div><br>
<% end %>
<div class="container">
  <div class="card border-primary">
    <div class="card-body">
      <%= page_entries_info @quizzes %>
      <table class="table">
        <tbody>
          <% @quizzes.each do |quiz| %>
            <tr>
              <td>
                <h3 class="h3"><%= quiz.title %><h3>
                <h6>ジャンル：<%= quiz.genre %></h6>
              </td>
              <td>
                <h6>いいね数</h6>
              </td>
              <td>
                <%= link_to "挑戦する", quiz_path(quiz), class: "btn btn-lg btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>  
      </table>
      <%= paginate @quizzes %>
    </div>
  </div>
</div><br><br>