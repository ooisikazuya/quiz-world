<div class="container">
  <h1 class="bg-warning text-white text-center">クイズ作成</h1>
</div><br>
<%= form_for @quiz, url: my_quizzes_path do |f| %>
  <div class="container">
    <h3 class=" text-info">クイズ名</h3><br>
    <div class="row">      
      <div class="col-7">
        <div class="form-group">
          <%= f.text_field :title, class: "form-control border-info", required: true %>
        </div>
      </div>
    </div>
  </div><br><br>
  <div class="container">
    <h3 class=" text-info">ジャンル</h3>
    <h6 class=" text-success">＊クイズ検索の際に使用されます。</h6>
    <div class="row">      
      <div class="col-7">      
        <div class="form-group">
          <%= f.text_field :genre, class: "form-control border-info", required: true %>
        </div>
      </div>
    </div>
  </div><br><br>
  <div class="container">
    <div class="row">
      <div class="col-7">
        <div class="actions">
          <%= f.submit "クイズを作成", class: "btn btn-primary btn-lg float-right text-white" %>
        </div>
      </div>
    </div>
  </div><br><br> 
<% end %>