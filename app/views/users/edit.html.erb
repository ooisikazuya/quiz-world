<div class="container" id="page-title">
  <h1 :style="styles">会員情報の変更</h1>
</div><br> 
<%= form_for(@user, url: user_path, method: :patch) do |f| %>
  <div class="container">
    <div class="row">      
      <div class="col-5">
        <%= f.label :ニックネーム, class: "h2 text-success" %><br />
        <%= f.text_field :nickname, class: "form-control border-success", autofocus: true %> 
      </div>
    </div><br><br>
    <div class="row">      
      <div class="col-12">
        <%= f.label :アイコン画像, class: "h2 text-success" %><i class="fas fa-icons fa-fw fa-2x"></i><br />           
        <label>
          <h5 class="btn btn-success">画像を選択</h5>           
          <span style="display:none;">        
            <%= f.file_field :icon, id: :user_icon %>
          </span>
        </lavel>       
      </div>
    </div>
    <% if @user.icon? %>
      <%= image_tag @user.icon.url, id: :icon_prev, width: :'40%', height: :'40%' %>
    <% else %>
      <img id="icon_prev" src="/assets/default.png" width="30%" height="30%">
    <% end %>
  </div><br><br>
  <div class="container">
    <div class="row">
      <div class="col-7">
        <%= f.submit "更新する", class: "btn btn-primary btn-lg float-right" %>
      </div>
    </div>
  </div><br><br> 
<% end %>
