<div class="container">
  <% if flash[:notice] %>
    <h2 class="flash bg-success text-white text-center">
      <%= flash[:notice] %>
    </h2>
  <% end %>
</div>
<div class="container">
  <h1 class="bg-warning text-white text-center">会員情報</h1>
</div><br>
<div class="container">
  <h2 class="text-success text-center">ニックネーム</h2>
  <h3 class="text-center"><%= @user.nickname %><h3>         
</div><br>
<div class="container">
  <h2 class="text-success text-center">メールアドレス<i class="far fa-envelope fa-fw"></i></h2>
  <h3 class="text-center"><%= @user.email %><h3>
</div><br>
<div class="container">
  <h2 class="text-success text-center">アイコン画像 <i class="fas fa-icons"></i></h2>
  <% if @user.icon? %>
    <p class="text-center">
      <%= image_tag @user.icon.url %>
    </p>
  <% else %>
    <h5 class="text-center">選択されていません</h5>
  <% end %>
  <div class="row">
    <div class="col">
      <%= link_to '登録情報の変更', edit_user_path, class: "btn btn-info btn-lg float-right" %>
    </div>
  </div>
</div><br><br><br>